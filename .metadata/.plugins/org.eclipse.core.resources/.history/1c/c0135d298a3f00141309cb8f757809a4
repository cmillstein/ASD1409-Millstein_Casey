








var ui = require("ui");

ui.button.addEventListener("click", function (e){
	if (ui.button.edit != true) {
		alert("create!");
		var newName = ui.phoneLabel.value;
		var newDesc = ui.descriptionLabel.value;
		ui.phoneLabel.value = "";
		ui.descriptionLabel.value = "";
		ui.phoneLabel.blur();
		ui.descriptionLabel.blur();
		data.create(newName, newDesc);
		data.read();
	} else {
		ui.tableData.removeAllChildren();
		data.update(ui.button.index, ui.button.location);
	}
});
